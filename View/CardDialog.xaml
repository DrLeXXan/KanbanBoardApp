 <Window x:Class="KanbanBoardApp.View.CardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanBoardApp.View"
        xmlns:CC="clr-namespace:KanbanBoardApp.CustomControls"
        mc:Ignorable="d"
        Title="Kanban Card" Height="520" Width="350">
     <Window.Resources>

    </Window.Resources>


    <StackPanel Orientation="Vertical">
        <!-- Card Header-->
        <StackPanel Orientation="Horizontal" Margin="10,10,0,20">
            <TextBlock Text="KANBAN Card" FontFamily="Georgia" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <TextBlock Text="ID:" FontSize="16" VerticalAlignment="Bottom"/>
        </StackPanel>

        <!-- Card Content -->
        <Grid Margin="10,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Card Title -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Right">
                <TextBlock Text="Card Title: " Margin="0,0,5,0"/>
                <CC:PlaceHolderTextBox Width="225" PlaceHolder="Enter Card Title" CaretBrush="White" CornerRadius="5" BorderThickness="1"
                       Text="{Binding Card.Title, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <!-- Card Owner -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Right">
                <TextBlock Text="Owner: " Margin="0,0,5,0"/>
                <CC:PlaceHolderTextBox Width="225" PlaceHolder="Enter Card Owner" CaretBrush="White" CornerRadius="5" BorderThickness="1"
                       Text="{Binding Card.Owner, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <!-- Card Priority -->
            <ComboBox Grid.Row="2" Grid.Column="0"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Width="120" Margin="5"
                        ItemsSource="{Binding UrgencyCollection}"
                        SelectedItem="{Binding Card.Urgency, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- Card Date -->
            <DatePicker Grid.Row="2" Grid.Column="1" Margin="5" SelectedDate="{Binding Card.DueDate, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        
        <!-- Card Description -->
        <StackPanel Margin="10,5,10,5">
            <TextBlock Text="Description"></TextBlock>
            <CC:PlaceHolderTextBox TextWrapping="Wrap" AcceptsReturn="True" Height="100" CornerRadius="5" BorderThickness="1"
                       PlaceHolder="" Text="{Binding Card.Description, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Card Comments Section ||||||||||||   WORKE IN PROGRESS -->
        <TextBlock Margin="10,0,10,0">Comments</TextBlock>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="15">
            <TextBlock Height="90">
                Testing<LineBreak />
                Testing<LineBreak />
                Testing<LineBreak />
                Testing<LineBreak />
            </TextBlock>
        </ScrollViewer>

        <Grid Height="45" Margin="10,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
                
            <!--  Button Save -->
            <Button Grid.Column="0" 
                    Content="Save" 
                    Margin="5,5,10,5" 
                    Background="LightGreen" BorderBrush="LightGreen" 
                    Click="btnSave_Click"/>
            <!--  Button Delete -->
            <Button Grid.Column="1" Content="Delete" Margin="5,5,10,5" Background="IndianRed" BorderBrush="IndianRed"/>
            <!--  Button Exit -->
            <Button Grid.Column="2" Content="Exit" Margin="5,5,10,5" Click="btnClose_window" Cursor="Hand"/>
        </Grid>
    </StackPanel>

</Window>
