<Window x:Class="KanbanBoardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanBoardApp"
        mc:Ignorable="d"
        Title="KanbanBoard" Height="600" Width="1000">


    <DockPanel LastChildFill="False">
        <!-- Header / Toolbar-->
        <DockPanel DockPanel.Dock="Top" Margin="0,15,0,20">
            <TextBlock Text="KANBAN Board" FontFamily="Georgia" FontSize="40" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button Content="Save Board" Width="100" Height="40" Margin="20,5,5,5"/>
                <Button Content="Load Board" Width="100" Margin="10,5,20,5"/>
                <Button Content="New Card" Width="100" Margin="0,5,20,5" Click="btnAdd_Card"/>
            </StackPanel>
        </DockPanel>

        <!-- Kanban Board -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" Margin="10">

                <!-- Column 1 -->
                <Border BorderThickness="4" CornerRadius="10" BorderBrush="Green" Margin="10">
                    <StackPanel Width="300">
                        <!-- Column Header-->
                        <Border CornerRadius="7,7,0,0" Background="Green">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,17">
                                <TextBlock Text="(1)" FontWeight="Bold" FontSize="18" Margin="15,5,0,0"/>
                                <TextBlock Text="To Do" FontWeight="Bold" FontSize="18" Margin="5,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <ItemsControl>
                            <!-- Items will be added here dynamically -->
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Column 2 -->
                <Border BorderThickness="4" CornerRadius="10" BorderBrush="#4795fc" Margin="10">
                    <StackPanel Width="300">
                        <!-- Column Header-->
                        <Border CornerRadius="7,7,0,0" Background="#4795fc">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,17">
                                <TextBlock Text="(1)" FontWeight="Bold" FontSize="18" Margin="15,5,0,0"/>
                                <TextBlock Text="In Progress" FontWeight="Bold" FontSize="18" Margin="5,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <ItemsControl>
                            <!-- Items will be added here dynamically -->
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Column 3 -->
                <Border BorderThickness="4" CornerRadius="10" BorderBrush="MediumOrchid" Margin="10">
                    <StackPanel Width="300">
                        <!-- Column Header-->
                        <Border CornerRadius="7,7,0,0" Background="MediumOrchid">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,17">
                                <TextBlock Text="(1)" FontWeight="Bold" FontSize="18" Margin="15,5,0,0"/>
                                <TextBlock Text="Done" FontWeight="Bold" FontSize="18" Margin="5,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <ItemsControl>
                            <!-- Items will be added here dynamically -->
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
