<Window x:Class="KanbanBoardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanBoardApp.View"
        mc:Ignorable="d"
        Title="KanbanBoard" Height="600" Width="1130">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <DockPanel Grid.Row="0" Margin="20,10,0,20">
            <TextBlock Text="KANBAN Board" FontFamily="Georgia" FontSize="40" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button Content="Save Board" Width="100" Height="40" Margin="20,5,5,5" />
                <Button Content="Add Column" Width="100" Height="40" Margin="10,5,20,5" Command="{Binding AddColumnsCommand}" Cursor="Hand"/>
                <Button Content="New Card" Width="100" Height="40" Margin="0,5,20,5" Click="btnAdd_Card" Cursor="Hand"/>
            </StackPanel>
        </DockPanel>


        <!-- Content / Kanban Board-->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="15">
            <ItemsControl x:Name="Columns" ItemsSource="{Binding Columns}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" BorderBrush="#4795fc" BorderThickness="4" CornerRadius="10" Width="250">
                            <!-- Column Header -->
                            <StackPanel HorizontalAlignment="Stretch">
                                <Border CornerRadius="7,7,0,0" Background="#4795fc">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,17">
                                        <TextBlock Text="(1)" FontWeight="Bold" FontSize="18" Margin="15,5,0,0"/>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18" Margin="5,5,0,0"/>
                                        <Button Content="+" 
                                                Background="Transparent" 
                                                BorderBrush="Transparent" 
                                                FontWeight="Bold" 
                                                FontSize="20" 
                                                HorizontalAlignment="Right" 
                                                Cursor="Hand" 
                                                Command="{Binding DataContext.AddColumnsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </Border>
                
                                <!-- Contect / Card Section -->
                                <ItemsControl ItemsSource="{Binding Cards}">
                                    <!-- Items will be added here dynamically -->
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>

    
    